<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/titleText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/titleText2"
                android:layout_below="@+id/titleText2"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/descText2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ratingBar2"
                android:layout_below="@+id/ratingBar2"
                android:minWidth="30dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contactText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/descText2"
                android:layout_below="@+id/descText2"
                android:layout_marginTop="10dp"
                android:text="@string/details_contact"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/addressText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/contactText2"
                android:layout_below="@+id/contactText2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/distText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/addressText2"
                android:layout_below="@+id/addressText2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/phoneText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/distText2"
                android:layout_below="@+id/distText2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/webText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phoneText2"
                android:layout_below="@+id/phoneText2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/openText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/webText2"
                android:layout_below="@+id/webText2"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/openHrsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/openText2"
                android:layout_below="@+id/openText2"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
